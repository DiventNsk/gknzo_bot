# Переменные окружения для проекта

# Токен Telegram бота (обязательно)
BOT_TOKEN=ваш_токен_бота_здесь

# Настройки Google Sheets (для прямого доступа)
GOOGLE_APPLICATION_CREDENTIALS=./path/to/your/service-account-key.json
GOOGLE_SHEETS_ID=ваш_id_таблицы_google_sheets
GOOGLE_SHEETS_RANGE=A1:Z100

# Настройки Web App
WEB_APP_URL=https://your-web-app-domain.com

# Настройки для внешнего API Google Sheets (например, Sheets to API)
SHEETS_API_BASE_URL=https://sheets.livepolls.app/api/v1
SHEETS_API_KEY=ваш_ключ_доступа_к_api_если_требуется

# Порт для сервера (по умолчанию 3000)
PORT=3000

# Разрешенные ID пользователей (через запятую, без пробелов)
# Пример: ALLOWED_USER_IDS=123456789,987654321
ALLOWED_USER_IDS=ваш_id_пользователя_здесь